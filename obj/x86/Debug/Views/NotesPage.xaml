<Page x:ConnectionId='1'
    x:Class="App5.Views.NotesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="BigHeaderTemplate">
            <RelativePanel>
                <TextBlock x:Uid="NotesHeader" Margin="{StaticResource SmallLeftMargin}" MaxLines="1" TextTrimming="CharacterEllipsis" RelativePanel.LeftOf="toolbar" RelativePanel.AlignLeftWithPanel="True"/>
                <InkToolbar x:ConnectionId='4' x:Name="toolbar" Background="Transparent"                             RelativePanel.AlignHorizontalCenterWithPanel="True">
                    <InkToolbarCustomToolButton x:Uid="Notes_LassoSelectionButton" Background="Transparent" IsChecked="{Binding Content.LassoSelectionButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xEF20;" />
                    </InkToolbarCustomToolButton>
                    <InkToolbarCustomToggleButton x:Uid="Notes_TouchInkingButton" Background="Transparent" IsChecked="{Binding Content.TouchInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xED5F;" />
                    </InkToolbarCustomToggleButton>
                    <InkToolbarCustomToggleButton x:Uid="Notes_MouseInkingButton" Background="Transparent" IsChecked="{Binding Content.MouseInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE962;" />
                    </InkToolbarCustomToggleButton>
                    
                    
                </InkToolbar>
                <CommandBar x:Name="topCommandBar" Style="{StaticResource InkCommandBarStyle}" RelativePanel.RightOf="toolbar" RelativePanel.AlignRightWithPanel="True">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton x:ConnectionId='5' x:Uid="Notes_ZoomInButton" Icon="ZoomIn"                      BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='6' x:Uid="Notes_ZoomOutButton" Icon="ZoomOut"                       BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='7' x:Uid="Notes_SaveButton" Icon="Save"                           BorderBrush="Transparent" BorderThickness="0,0,0,0"/>
                        <AppBarButton x:ConnectionId='8' x:Uid="Notes_OpenButton" Icon="OpenFile"                           BorderBrush="Transparent" BorderThickness="0,0,0,0"/>
                        <!--<AppBarButton x:Uid=""-->
                    </CommandBar.PrimaryCommands>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton x:ConnectionId='9' x:Uid="Notes_CutButton" Icon="Cut"                   IsEnabled="{Binding Content.CutButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}"  BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='10' x:Uid="Notes_CopyButton" Icon="Copy"                    IsEnabled="{Binding Content.CopyButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='11' x:Uid="Notes_PasteButton" Icon="Paste"                     IsEnabled="{Binding Content.PasteButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarSeparator />
                        <AppBarButton x:ConnectionId='12' x:Uid="Notes_UndoButton" Icon="Undo"                    IsEnabled="{Binding Content.UndoButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='13' x:Uid="Notes_RedoButton" Icon="Redo"                    IsEnabled="{Binding Content.RedoButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarSeparator/>
                        <AppBarButton x:ConnectionId='14' x:Uid="Notes_LoadInkFileButton" Icon="OpenFile"                           BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='15' x:Uid="Notes_SaveInkFileButton" Icon="Save"                           IsEnabled="{Binding Content.SaveInkFileButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='16' x:Uid="Notes_ExportAsImageButton" Icon="Download"                             IsEnabled="{Binding Content.ExportAsImageButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarSeparator/>
                        <AppBarButton x:ConnectionId='17' x:Uid="Notes_ClearAllButton" Icon="Delete"                        IsEnabled="{Binding Content.ClearAllButtonIsEnabled, ElementName=shellFrame, Mode=OneWay}" BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="SmallHeaderTemplate">
            <InkToolbar x:ConnectionId='2' HorizontalAlignment="Center"                            >
                <InkToolbarCustomToolButton x:Uid="Notes_LassoSelectionButton" Background="Transparent" IsChecked="{Binding Content.LassoSelectionButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xEF20;" />
                </InkToolbarCustomToolButton>
                <InkToolbarCustomToggleButton x:Uid="Notes_TouchInkingButton" Background="Transparent" IsChecked="{Binding Content.TouchInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xED5F;" />
                </InkToolbarCustomToggleButton>
                <InkToolbarCustomToggleButton x:Uid="Notes_MouseInkingButton" Background="Transparent" IsChecked="{Binding Content.MouseInkingButtonIsChecked, ElementName=shellFrame, Mode=TwoWay}">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE962;" />
                </InkToolbarCustomToggleButton>
            </InkToolbar>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='18' x:Name="ContentArea">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='19' x:Name="visualStateGroup"                                                           >
                <VisualState x:ConnectionId='20' x:Name="SmallVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='21' x:Name="BigVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel x:ConnectionId='22' x:Name="HeaderPanel" Orientation="Horizontal" Grid.Row="0">
            <TextBlock x:ConnectionId='38' x:Name="Header" 
                       Text="Basic ink store sample" 
                       Style="{ThemeResource HeaderTextBlockStyle}" 
                       Margin="10,0,0,0" />
            <Button x:ConnectionId='39' x:Name="btnSave" 
                    Content="Save" 
                    Margin="50,0,10,0"/>
            <Button x:ConnectionId='40' x:Name="btnLoad" 
                    Content="Load" 
                    Margin="50,0,10,0"/>
            <Button x:ConnectionId='41' x:Name="btnClear" 
                    Content="Clear" 
                    Margin="50,0,10,0"/>
        </StackPanel>
        <ScrollViewer x:ConnectionId='23'
            x:Name="canvasScroll"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
            ZoomMode="Enabled">

                <Grid Background="{StaticResource InkCanvasBackground}"
                        Width="{Binding ElementName=inkCanvas, Path=Width}"
                        Height="{Binding ElementName=inkCanvas, Path=Height}">                        
                    <InkCanvas x:ConnectionId='36' x:Name="inkCanvas"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
                <Canvas x:ConnectionId='37' x:Name="selectionCanvas"
                        Width="{Binding ElementName=inkCanvas, Path=Width}"
                        Height="{Binding ElementName=inkCanvas, Path=Height}"/>
                    
            </Grid>
        </ScrollViewer>        
        <CommandBar x:ConnectionId='24'
            x:Name="bottomCommandBar"
            Grid.Row="1"
            Style="{StaticResource InkCommandBarStyle}">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='25' x:Uid="Notes_ZoomInButton" Icon="ZoomIn"                      BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='26' x:Uid="Notes_ZoomOutButton" Icon="ZoomOut"                       BorderBrush="Transparent" BorderThickness="0,0,0,0" />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='27' x:Uid="Notes_CutButton" Icon="Cut"                                                                         BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='28' x:Uid="Notes_CopyButton" Icon="Copy"                                                                          BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='29' x:Uid="Notes_PasteButton" Icon="Paste"                                                                            BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='30' x:Uid="Notes_UndoButton" Icon="Undo"                                                                          BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='31' x:Uid="Notes_RedoButton" Icon="Redo"                                                                          BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='32' x:Uid="Notes_LoadInkFileButton" Icon="OpenFile"                           BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='33' x:Uid="Notes_SaveInkFileButton" Icon="Save"                                                                                        BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='34' x:Uid="Notes_ExportAsImageButton" Icon="Download"                                                                                            BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='35' x:Uid="Notes_ClearAllButton" Icon="Delete"                                                                                  BorderBrush="Transparent" BorderThickness="0,0,0,0" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</Page>

